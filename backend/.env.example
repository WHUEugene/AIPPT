# AI-PPT Flow Backend Configuration

# LLM API Configuration
LLM_API_KEY=
LLM_API_BASE=
LLM_CHAT_MODEL=google/gemini-3-pro-preview
LLM_IMAGE_MODEL=google/gemini-3-pro-image-preview
LLM_TIMEOUT_SECONDS=120

# Batch Generation Configuration
# 批量生成的默认并发数 (建议: 5-15，可以调高到50+)
BATCH_DEFAULT_WORKERS=5

# 批量生成的最大并发数 (建议: 20-100，根据API限制和服务器性能调整)
BATCH_MAX_WORKERS=20

# 同时进行的批量任务最大数量 (建议: 10-50)
BATCH_MAX_CONCURRENT=10

# 批量任务结果保留时间（小时）
BATCH_CLEANUP_HOURS=24

# File Paths
TEMPLATE_STORE_PATH=backend/data/templates.json
IMAGE_OUTPUT_DIR=backend/generated/images
PPTX_OUTPUT_DIR=backend/generated/pptx

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:5173","https://localhost:5173"]
