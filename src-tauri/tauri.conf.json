{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AI-PPT Flow",
  "version": "0.1.0",
  "identifier": "com.aippt.app",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd frontend && npm run build",
    "beforeDevCommand": "cd frontend && npm run dev"
  },
  "app": {
    "windows": [
      {
        "title": "AI-PPT Flow",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns"
    ],
    "externalBin": [
      "binaries/backend-api"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}